<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!--<item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>-->
        <!--<item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>-->
    </style>

    <style name="FullscreenActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="FullscreenActionBarStyle.Pop" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="FlightButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="FontHuge" parent="TextAppearance.AppCompat.Display3">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">56sp</item>
    </style>

    <style name="FontHuge.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="FontHuge.Teal">
        <item name="android:textColor">@color/colorTeal</item>
    </style>

    <style name="FontLarge" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="FontLarge.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="FlightAirportWrap" parent='FontHuge.White'>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
